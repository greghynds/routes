<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
            android:id="@+id/helloButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/say_hello_btn_text"
            app:layout_constraintBottom_toTopOf="@+id/goodbyeButton"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_centerInParent="true"/>

    <Button
            android:id="@+id/goodbyeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/say_goodbye_btn_text"
            app:layout_constraintTop_toBottomOf="@+id/helloButton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_centerInParent="true"/>
</android.support.constraint.ConstraintLayout>